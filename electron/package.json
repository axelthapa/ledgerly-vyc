
{
  "name": "vyc-accounting-electron",
  "version": "1.0.0",
  "description": "VYC Accounting System Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "build-win": "electron-builder --win"
  },
  "author": "VYC",
  "license": "MIT",
  "dependencies": {
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.vyc.accounting",
    "productName": "VYC Accounting System",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "db-utils.js",
      "db/**/*",
      "../dist/**/*"
    ],
    "extraResources": [
      {
        "from": "db/templates",
        "to": "db/templates",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.finance"
    },
    "win": {
      "target": ["nsis"],
      "icon": "../public/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "runAfterFinish": true,
      "installerIcon": "../public/favicon.ico",
      "uninstallerIcon": "../public/favicon.ico",
      "license": "LICENSE.txt"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
